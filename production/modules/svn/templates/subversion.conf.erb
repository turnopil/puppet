
LoadModule dav_svn_module     modules/mod_dav_svn.so
LoadModule authz_svn_module   modules/mod_authz_svn.so

<Location /subversion>
DAV svn
SVNPath "<%= @svn_envpath %>/<%= @svn_repo_name %>"
AuthType Basic
AuthName "Subversion repository"
AuthUserFile <%= @svn_envpath %>/users
Require valid-user
<% if @ssl_install %>
SSLRequireSSL
<% end %>
</Location>